    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Start local server (uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--port=8000"
            ],
            "justMyCode": true,
        },
        {
            "name": "Cloud Build: Build docker image",
            "request": "launch",
            "command": "gcloud builds submit --tag gcr.io/python-docs-samples-tests/forecasting-live-demo-backend --timeout=86400s",
            "type": "node-terminal",
        },
        {
            "name": "Cloud Build: Build docker image (cloudbuild.yaml)",
            "request": "launch",
            "command": "gcloud builds submit --config cloudbuild.yaml --substitutions _GCP_PROJECT_ID=python-docs-samples-tests --machine-type e2-highcpu-32",
            "type": "node-terminal",
        },
        {
            "name": "Cloud Run: Deploy docker image",
            "request": "launch",
            "command": "gcloud beta run deploy forecasting-live-demo-backend --region=us-central1 --image=gcr.io/python-docs-samples-tests/forecasting-live-demo-backend:latest --platform=managed --cpu=2 --memory=8G --timeout=3600 --allow-unauthenticated --session-affinity --min-instances=1",
            "type": "node-terminal"
        },
    ]
}